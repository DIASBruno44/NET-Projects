<Window x:Class="MeteoApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:MeteoApp.WPF.Converters"
        xmlns:vm="clr-namespace:MeteoApp.ViewModels;assembly=MeteoApp.ViewModels"
        
        mc:Ignorable="d"
        Title="Météo Client WPF" Height="450" Width="400"
        FontFamily="Segoe UI">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:MeteoIconConverter x:Key="MeteoIconConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <TextBox Text="{Binding NomVille, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Padding="5" FontSize="14" />

            <Button Content="Rechercher" 
                    Command="{Binding RechercherMeteoCommand}"
                    Margin="10,0,0,0" 
                    Padding="10,0"/>
        </StackPanel>


        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <TextBlock Text="{Binding MeteoDuJour.NomVille}" 
                       FontSize="32" FontWeight="Bold" Foreground="#333"/>
            <Image Height="100" Width="100" HorizontalAlignment="Left"
                   Margin="0,0,0,10"
                   Source="{Binding MeteoDuJour.Descriptions[0].IconeCode, 
                                    Converter={StaticResource MeteoIconConverter}}"/>
            <TextBlock FontSize="72" FontWeight="Light" Margin="0,10,0,10" Foreground="#007ACC">
                <Run Text="{Binding MeteoDuJour.DonnéesPrincipales.TemperatureActuelle, StringFormat=\{0:F1\}}"/>
                <Run Text="°C"/>
            </TextBlock>

            <TextBlock Text="{Binding MeteoDuJour.Descriptions[0].Description}" 
                       FontSize="20" FontStyle="Italic" Foreground="#666"/>
        </StackPanel>

    </Grid>
</Window>
